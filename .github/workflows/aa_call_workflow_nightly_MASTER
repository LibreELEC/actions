name: nightly-MASTER
on:
  # allows to run this workflow manually from the actions tab
  workflow_dispatch:
env:
  TZ: Australia/Melbourne

jobs:
  check_date:
    runs-on: ubuntu-latest
    name: Check latest commit
    outputs:
      should_run: ${{ steps.should_run.outputs.should_run }}
    steps:
      - uses: actions/checkout@v3
        with:
          ref: master
          fetch-depth: 2
          repository: "LibreELEC/LibreELEC.tv"
          path: "LibreELEC.tv"
      - name: print latest_commit
        run: echo ${{ github.sha }}
      - id: should_run
        continue-on-error: true
        name: check latest commit is less than a day
        if: ${{ github.event_name == 'schedule' }}
        run: test -z $(git rev-list  --after="24 hours"  ${{ github.sha }}) && echo "::set-output name=should_run::false"
        
  # Allwinner
  libreelec-A64.arm:
    # Only run if there has been a commit in the last 24 hours
    needs: check_date
    if: ${{ needs.check_date.outputs.should_run != 'false' }}
    runs-on: ubuntu-latest
    steps:
      - uses: ./.github/workflows/libreelec-A64.arm
        with:
          clean_le: false
          upload: true
          ephemeral_within: true
  libreelec-H3.arm:
    # Only run if there has been a commit in the last 24 hours
    needs: check_date
    if: ${{ needs.check_date.outputs.should_run != 'false' }}
    runs-on: ubuntu-latest
    steps:
      - uses: ./.github/workflows/libreelec-H3.arm
        with:
          clean_le: false
          upload: true
          ephemeral_within: true
  libreelec-H5.arm:
    # Only run if there has been a commit in the last 24 hours
    needs: check_date
    if: ${{ needs.check_date.outputs.should_run != 'false' }}
    runs-on: ubuntu-latest
    steps:
      - uses: ./.github/workflows/libreelec-H5.arm
        with:
          clean_le: false
          upload: true
          ephemeral_within: true
  libreelec-H6.arm:
    # Only run if there has been a commit in the last 24 hours
    needs: check_date
    if: ${{ needs.check_date.outputs.should_run != 'false' }}
    runs-on: ubuntu-latest
    steps:
      - uses: ./.github/workflows/libreelec-H6.arm
        with:
          clean_le: false
          upload: true
          ephemeral_within: true

  # Amlogic
  libreelec-AMLGX.arm:
    # Only run if there has been a commit in the last 24 hours
    needs: check_date
    if: ${{ needs.check_date.outputs.should_run != 'false' }}
    runs-on: ubuntu-latest
    steps:
      - uses: ./.github/workflows/libreelec-AMLGX.arm
        with:
          clean_le: false
          upload: true
          ephemeral_within: true
